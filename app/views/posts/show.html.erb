<h3>ユーザー詳細</h3>

<table>
   <tr>
     <th>タイトル</th>
     <td><%= @post.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @post.start_date.to_s(:date_jp) %></td>
   </tr>
   <tr>
     <th>終了日</th>
     <td><%= @post.end_date.to_s(:date_jp) %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td>
        <% if @post.all_day == true %>
            ○
        <% else %>
            ×
        <% end %>
    </td>
   </tr>
   <tr>
     <th>メモ</th>
     <td><%= @post.memo %></td>
   </tr>
 </table>
 
 <div>
   <ul>
     <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
   </ul>
 </div>